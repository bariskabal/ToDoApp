@model AppUserSignInDto
@{
    ViewData["Title"] = "Home Page";
    Layout="~/Views/Shared/_StandartLayout.cshtml";
}

<form asp-action="GirisYap" method="post" class="mt-5 w-50 mx-auto p-4 shadow">
    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adınız :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password">Password :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control">
    </div>

    <div class="form-check">        
        <input type="checkbox" asp-for="RememberMe" class="form-check-input">
        <label asp-for="RememberMe" class="form-check-label"></label>

    </div>



    <a asp-action="KayitOl" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <input type="submit" class="btn btn-info btn-sm" value="Giriş yap">
    
</form>



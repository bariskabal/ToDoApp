@{
    ViewData["Title"] = "Home Page";
    Layout="~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row mt-3">
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Atanmayı bekleyen görev sayısı</h4>
                @if (ViewBag.AtanmayiBekleyenGörevSayisi>0)
                {
                    <p class="card-text">@ViewBag.AtanmayiBekleyenGörevSayisi</p>
                    <p >
                        <a asp-action="Index" asp-controller="IsEmri" class="btn btn-light btn-sm ">İncele <i class="fas fa-chevron-circle-right"></i></a>
                    </p>
                }
                else{
                    <p class="card-text lead">Atanmayı bekleyen görev bulunmamaktadır.</p>
                }
                
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Tamamlanmış görev sayısı</h4>
                @if (ViewBag.TamamlanmisGorevSayisi>0)
                {
                    <p class="card-text">@ViewBag.TamamlanmisGorevSayisi</p>
                    <p >
                        <a asp-action="TamamlanmısGorevListe" asp-controller="Home" class="btn btn-light btn-sm ">İncele <i class="fas fa-chevron-circle-right"></i></a>
                    </p>
                }
                else{
                    <p class="card-text lead">Tamamlanmış görev bulunmamaktadır.</p>
                }
                
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Okunmamış bildirim sayısı</h4>
                @if (ViewBag.OkunmayanBildirimler>0)
                {
                    <p class="card-text">@ViewBag.OkunmayanBildirimler</p>
                    <p >
                        <a asp-action="Index" asp-controller="Bildirim" class="btn btn-light btn-sm ">İncele <i class="fas fa-chevron-circle-right"></i></a>
                    </p>
                }
                else{
                    <p class="card-text lead">Okunmamış bildirim bulunmamaktadır.</p>
                }
                
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Toplam rapor sayısı</h4>
                @if (ViewBag.YazilmişRaporSayisi>0)
                {
                    <p class="card-text">@ViewBag.YazilmişRaporSayisi</p>
                    
                }
                else{
                    <p class="card-text lead">Yazılmış rapor bulunmamaktadır.</p>
                }
                
            </div>
        </div>
    </div>
</div>
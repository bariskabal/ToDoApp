@model List<BildirimListDto>

@{
    Layout="~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count>0)
{
    @foreach (var item in Model)
    {
        <div class="alert alert-light p-3 my-2">
        <form class="my-1" method="post" asp-action="Index">
            <p class="lead">
                <input type="hidden" name="id" value="@item.Id">
                @item.Aciklama
                <button type="submit" class="btn btn-info btn-sm float-right">Okundu</button>
            </p>
            
        </form>
        </div>
    }
}
else{
    
        <div class="alert alert-light p-3 my-2">
            <p class="lead">
                Okunmamış bildirim bulunmamaktadır.
            </p>
        </div>
    
}



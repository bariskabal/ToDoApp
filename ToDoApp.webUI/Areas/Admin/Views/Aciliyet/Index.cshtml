@model List<AciliyetListDto>

@{
    Layout="~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count!=0)
{
    <a asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-sm btn-outline-dark my-2">Yeni Aciliyet<i class="fas fa-plus-circle  ml-1"></i></a>
    <table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>Tanim</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tanim</td>
                <td>
                    <a asp-action="GuncelleAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle <i class="far fa-edit ml-2"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else{
    <div class="text-center  mt-4">
        <p class="lead">sistemde kayıtlı aciliyet bulunamadı</p>
        
        <a asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-sm btn-info my-2">Yeni aciliyet ekle</a>
    </div>
}


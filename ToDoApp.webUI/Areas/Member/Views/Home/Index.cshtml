@{
    ViewData["Title"] = "Home Page";
    Layout="~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Tamamlanmayan Görev Sayısı</h4>
                @if (ViewBag.TamamlanmasiGerekenGorevSayisi>0)
                {
                    <p class="card-text">@ViewBag.TamamlanmasiGerekenGorevSayisi</p>
                    <p >
                        <a asp-action="Index" asp-controller="IsEmri" class="btn btn-light btn-sm ">İncele <i class="fas fa-chevron-circle-right"></i></a>
                    </p>
                }
                else{
                    <p class="card-text lead">Tamamlanacak görev bulunmamaktadır.</p>
                }
                
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Tamamlanan görev sayısı</h4>
                @if (ViewBag.TamamlananGorevSayisi>0)
                {
                    <p class="card-text">@ViewBag.TamamlananGorevSayisi</p>
                    <p >
                        <a asp-action="Index" asp-controller="Gorev" class="btn btn-light btn-sm ">İncele <i class="fas fa-chevron-circle-right"></i></a>
                    </p>
                }
                else{
                    <p class="card-text lead">Herhangi bir görev tamamlanmamış.</p>
                }
                
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Okumayan bildirim sayısı</h4>
                @if (ViewBag.OkunmayanBildirimSayisi>0)
                {
                    <p class="card-text">@ViewBag.OkunmayanBildirimSayisi</p>
                    <p >
                        <a asp-action="Index" asp-controller="Bildirim" class="btn btn-light btn-sm ">İncele <i class="fas fa-chevron-circle-right"></i></a>
                    </p>
                }
                else{
                    <p class="card-text lead">Okunmayan bildirim bulunmamaktadır.</p>
                }
                
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Yazılan Rapor Sayısı</h4>
                @if (ViewBag.RaporSayisi>0)
                {
                    <p class="card-text">@ViewBag.RaporSayisi</p>
                }
                else{
                    <p class="card-text lead">Herhangi bir rapor yazmamışsınız.</p>
                }
                
            </div>
        </div>
    </div>
</div>


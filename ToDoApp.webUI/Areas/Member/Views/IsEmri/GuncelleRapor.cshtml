@model RaporUpdateDto

@{
    Layout="~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}



<form method="post" asp-action="GuncelleRapor" class="w-75 mx-auto p-3">
    <div class="card text-white bg-primary mb-3">
        <div class="card-header"> Görevin Adı : @Model.Gorev.Ad</div>
        <div class="card-body">
            <h4 class="card-title">@Model.Gorev.Aciliyet.Tanim</h4>
            <p class="card-text">@Model.Gorev.Aciklama</p>
        </div>
    </div>
    
    <input type="hidden" asp-for="@Model.GorevId">
    <div class="form-group">
        <label asp-for="@Model.Tanim">Tanım : </label>
        <span asp-validation-for="@Model.Tanim" class="text-danger"></span>
        <input asp-for="@Model.Tanim" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Detay">Detay :</label>
        <span asp-validation-for="@Model.Detay" class="text-danger"></span>
        <input asp-for="@Model.Detay" class="form-control">
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning btn-sm">Vazgeç<i class="fas fa-chevron-circle-left ml-2"></i></a>
        <button type="submit" class="btn btn-info btn-sm">Kaydet<i class="fas fa-check ml-2"></i></button>
    </div>
</form>


@section JavaScript{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}